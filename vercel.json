{
  "version": 2,
  "builds": [
    {
      "src": "vite.config.js",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/src/(.*)",
      "dest": "src/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "rewrites": [{ "source": "/(.*)", "destination": "/" }]
    }
  ]
}
